<!--Carousel Wrapper-->
<div id="carousel-thumb" class="carousel slide carousel-fade carousel-thumbnails" data-ride="carousel">
  <!--Slides-->
  <div class="carousel-inner" role="listbox" style="height: 100%">

    <div class="carousel-item active" style="height: 100%">
      <%= image_tag images.first, class: "d-block w-auto", style: 'height: auto; background-color: #ADD8E6;' %>
    </div>
    <% images.drop(1).each do |image| %>
      <div class="carousel-item" style="height: 100%">
        <%= image_tag image, class: "d-block w-auto", style: 'height: auto; background-color: #ADD8E6;' %>
      </div>
    <% end %>

  </div>
  <!--/.Slides-->
  <!--Controls-->
  <a class="carousel-control-prev" href="#carousel-thumb" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel-thumb" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
  <!--/.Controls-->
  <ol class="carousel-indicators" style="padding-bottom: 2%">
    <% images.each_with_index do |image, i| %>
      <li data-target='#carousel-thumb' data-slide-to="<%= i %>" class="<%= i == 0 ? 'active' : '' %>">
        <%= image_tag image, class: "d-block w-100 img-fluid", style: 'height: 30px;background-color: #ADD8E6;' %>
      </li>
    <% end %>
  </ol>
</div>
<!--/.Carousel Wrapper-->