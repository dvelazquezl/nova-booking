<div class="modal fade" id="showRoom" tabindex="-1" role="dialog" aria-labelledby="showRoom" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><%= room.description %></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="col-12">
          <div class="row">
            <div class="col-md-8 col-sm-12">
              <%= render partial: "estates/show_images", :locals => { images: room.images, h_size: '300px'} %>
            </div>
            <div class="col-md-8 col-sm-12">
              <%= render partial: "estates/facilities_list", :locals => { facilities: room.facilities_rooms} %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>