<div class="container">
  <div class="row">
    <div class="col">
      <div class="card card-default">
        <div class="card-header"><h5><strong>Disponibilidad</strong></h5></div>
        <!-- START table-responsive-->
        <div class="table-responsive">
          <table class="table table-bordered table-hover" id="table-ext-1">
            <thead>
            <tr>
              <th>Tipo de habitacion</th>
              <th>Capacidad</th>
              <th>Precio</th>
              <th>Seleccionar habitacion</th>
            </tr>
            </thead>
            <tbody id="mytable">
            <% @rooms.each do |r| %>
              <tr id="row">
                <td class="col-2"><%= r.room_type %></td>
                <td class="col-2">
                  <% r.capacity.to_i.times do %>
                    <em class="fa-lg fas fa-user"></em>
                  <% end %>
                </td>
                <td class="col-2" id="price"><%= r.price %></td>
                <td class="col-2">
                  <label>
                    <select class="custom-select custom-select-sm" id="quantity">
                      <option value="0">0</option>
                      <% r.quantity.times do |q| %>
                        <option value=<%= q + 1 %>><%= q + 1 %></option> #mejorar el + 1
                      <% end %>
                    </select>
                  </label>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <!-- END table-responsive-->
      </div>
    </div>
    <div class="col col-lg-2">
        <div class="card card-default mb-3">
          <div class="card-body">
            <div class="card-header">
              <h5><strong>Total</strong></h5>
            </div>
            <label for="total"></label><input class="form-control" id="total" type="text" disabled/>
          </div>
          <div class="card-footer">
            <button class="btn btn-primary">Reservar</button>
          </div>
        </div>
    </div>
  </div>
</div>

<script>

  function addValues() {
      let total = 0;
      $('#mytable tr').each(function () {
          let sum = parseInt($('#quantity option:selected').val()) * parseInt($('#price').text());
          total = total + sum;
      });
      $('#total').val(total);
  }
  $(document).on('change', '#row', addValues());
</script>