<div class="container">
  <div class="row justify-content-center">
<div class="card col-6">
  <article class="card-body">
    <h2 class="card-title text-center mb-4 mt-1">Registrar Cuenta</h2>
    <hr>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <form>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fa fa-user"></i> </span>
            </div>
            <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Nombre de usuario", class: "form-control" %>
          </div> <!-- input-group.// -->
        </div> <!-- form-group// -->

        <div class="form-group">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
          </div> <!-- input-group.// -->
        </div> <!-- form-group// -->

        <div class="form-group">
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> caracteres minimo</em>
          <% end %>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "ContraseÃ±a"%>
          </div> <!-- input-group.// -->
        </div> <!-- form-group// -->
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "current-password", class: "form-control", placeholder: "Confirmar contraseÃ±a"%>
          </div> <!-- input-group.// -->
        </div> <!-- form-group// -->

        <div class="form-group">
          <%= f.submit "Registrarse" ,class: "btn btn-primary btn-block"%>
        </div> <!-- form-group// -->
        <p class="text-center"><%= render "devise/shared/links" %></p>
      </form>
    <% end %>
  </article>
</div> <!-- card.// -->
  </div>
</div>