<div>
  <table class="table table-striped table-hover w-100 col-7">
    <thead class="thead-light">
    <tr>
      <th class="text-center">Descripcion</th>
      <th class="text-center">Tipo</th>
      <th class="text-center">Acciones</th>
    </tr>
    </thead>
    <tbody>
    <% facilities.each do |facility| %>
      <tr>
        <td class="text-center"><%= facility.description %></td>
        <td class="text-center"><%= facility.facility_type.text %></td>
        <td class="text-center">
          <div class="btn-group" role="group">
            <%= link_to edit_facility_path(facility) do %>
              <button class="btn btn-link text-primary" title="Editar"><i class="fas fa-edit"></i></button>
            <% end %>
            <%#= link_to facility, method: :delete, data: {confirm: 'EstÃ¡s seguro?'} do %>
              <!--button class="btn btn-link text-danger" title="Eliminar"><i class="fas fa-trash-alt"></i></button-->
            <%# end %>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="card card-columns-2 card-body bg-gray-light col-7 fixed-bottom">
  <div class="row row-flush">
    <div class="col">
      <%= will_paginate facilities, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
    <div class="col">
      <%= page_entries_info facilities, :model => 'facility', :class => 'align-middle' %>
    </div>
  </div>
</div>
