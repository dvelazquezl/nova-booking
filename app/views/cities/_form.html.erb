<%= form_with(model: city, local: true) do |form| %>
  <% if city.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(city.errors.count, "error") %> prohibited this city from being saved:</h2>

      <ul>
        <% city.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card card-default">
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
            <div class="card-body height_div">
              <div class="form-group">
                <label>Ciudad </label>
                <%= form.text_field :name, class: "form-control", required: "required" %>
              </div>
              <div class="field">
                <label>Depatamento </label>
                <%= form.collection_select(:departament_id, Departament.all, :id, :name, {:prompt => 'Departamento'}, {required: true}) %>
                <%= link_to 'Crear Departamento', new_departament_path, :class => "mb-1 btn btn-secondary" %>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>

  <fieldset>
    <div class="form-group row">
      <div class="col-md-6">
        <%= form.submit 'Guardar', class: "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>
